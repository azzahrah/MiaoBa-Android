<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.nodemedia.leadlive">

    <!--允许程序使用网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许程序访问Wi-Fi网络状态信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问使用照相设备 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--允许程序录制音频-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--允许程序访问闪光灯-->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <!--允许程序写入外部存储-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--子特性:申明程序需要用到camera特性-->
    <uses-feature android:name="android.hardware.camera" />
    <!--子特性:允许程序使用设备摄像头的自动对焦功能-->
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SimpleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.LoginWayActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.UserActivity" />
        <activity android:name=".view.UserFaceActivity" />
        <activity android:name=".view.UserFansActivity" />
        <activity android:name=".view.UserFollowActivity" />

        <activity
            android:name=".view.LivePlayerActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".view.LivePublisherActivity"
            android:configChanges="orientation|screenSize" />

        <!-- 微信 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- QQ -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent你的AppId" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- 微博 -->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>