<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.nodemedia.leadlive">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.LoginWayActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.UserActivity" />
        <activity android:name=".view.UserFaceActivity" />
        <activity android:name=".view.UserFansActivity" />
        <activity android:name=".view.UserFollowActivity" />

        <activity
            android:name=".view.LivePlayerActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".view.LivePublisherActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>