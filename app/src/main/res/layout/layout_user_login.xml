<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_rect_horizontal"
    android:orientation="vertical">

    <LinearLayout
        style="@style/common_rect_horizontal"
        android:layout_marginTop="@dimen/common_dp_16"
        android:orientation="horizontal">

        <TextView
            style="@style/common_textview_black"
            android:layout_marginRight="@dimen/common_dp_20"
            android:text="@string/phone"
            android:visibility="gone" />

        <cn.nodemedia.library.view.widget.DrawableEditText
            android:id="@+id/phone"
            style="@style/common_edit_phone"
            android:hint="@string/phone_hint"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        style="@style/common_rect_horizontal"
        android:layout_marginTop="@dimen/common_dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/common_textview_black"
            android:layout_marginRight="@dimen/common_dp_20"
            android:text="@string/password"
            android:visibility="gone" />

        <LinearLayout
            style="@style/common_rect_horizontal"
            android:background="@drawable/common_edit_line_gray_background"
            android:gravity="center_vertical">

            <cn.nodemedia.library.view.widget.DrawableEditText
                android:id="@+id/password"
                style="@style/common_edit_password"
                android:hint="@string/password_hint" />

            <ImageView
                android:id="@+id/password_eye"
                style="@style/common_imageview"
                android:layout_marginRight="@dimen/common_dp_4"
                android:src="@drawable/icon_eye_hide" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_text"
        style="@style/common_textview_gray"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/common_dp_16"
        android:text="@string/password_forget_find"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/login_button"
        style="@style/common_button_theme_line"
        android:layout_marginTop="@dimen/common_dp_24"
        android:text="@string/login" />
</LinearLayout>