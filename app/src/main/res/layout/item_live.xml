<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_rect_horizontal"
    android:background="@drawable/common_background"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/common_rect_horizontal"
        android:padding="@dimen/common_dp_12">

        <ImageView
            android:id="@+id/user_face"
            style="@style/common_imageview"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="@dimen/common_dp_48"
            android:layout_marginRight="@dimen/common_dp_12"
            android:src="@drawable/default_head" />

        <ImageView
            android:id="@+id/user_auth"
            style="@style/common_imageview"
            android:layout_alignBottom="@+id/user_face"
            android:layout_alignRight="@+id/user_face"
            android:src="@drawable/global_xing_1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_name"
            style="@style/common_textview_black"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/common_dp_4"
            android:layout_toRightOf="@+id/user_face"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/user_location"
            style="@style/common_textview_gray_small"
            android:layout_below="@+id/user_name"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/common_dp_4"
            android:layout_toRightOf="@+id/user_face"
            android:drawableLeft="@drawable/live_map_dark"
            android:drawablePadding="@dimen/common_dp_4"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/user_watch"
            style="@style/common_textview_gray_small"
            android:layout_alignBottom="@+id/user_face"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:text="@string/app_name" />
    </RelativeLayout>

    <View style="@style/common_line" />

    <RelativeLayout style="@style/common_rect_horizontal">

        <ImageView
            android:id="@+id/user_cover"
            style="@style/common_imageview"
            android:src="@drawable/mr_720" />

        <ImageView
            android:id="@+id/user_live_state"
            style="@style/common_imageview"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_dp_12"
            android:layout_marginTop="@dimen/common_dp_8"
            android:src="@drawable/live_live" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_live_title"
        style="@style/common_textview_gray"
        android:padding="@dimen/common_dp_12" />

    <View
        style="@style/common_line"
        android:layout_height="@dimen/common_dp_4"
        android:background="@color/background_white_pressed" />
</LinearLayout>


