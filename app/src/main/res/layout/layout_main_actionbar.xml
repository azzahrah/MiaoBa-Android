<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_actionbar"
    style="@style/common_rect_horizontal"
    android:background="@color/common_theme_light"
    android:paddingLeft="@dimen/common_dp_8"
    android:paddingRight="@dimen/common_dp_8">

    <ImageView
        android:id="@+id/main_chat"
        style="@style/common_imageview"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_dp_16"
        android:src="@drawable/actionbar_chat" />

    <ImageView
        android:id="@+id/main_search"
        style="@style/common_imageview"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_dp_16"
        android:src="@drawable/actionbar_search" />

    <TextView
        android:id="@+id/main_me_diamonds"
        style="@style/common_textview_white_small"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/me_harvest_exchange"
        android:text="@string/app_name"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/main_live_tab"
        style="@style/common_rect_wrap"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            style="@style/common_rect_wrap"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/live_follow"
                style="@style/common_rect_wrap"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/live_follow_text"
                    style="@style/common_textview_white_big"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_dp_12"
                    android:paddingRight="@dimen/common_dp_12"
                    android:text="关注" />

                <ImageView
                    android:id="@+id/live_follow_icon"
                    style="@style/common_imageview"
                    android:layout_marginTop="@dimen/common_dp_2"
                    android:src="@drawable/home_icn_drop_down"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/live_hot"
                style="@style/common_rect_wrap"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/live_hot_text"
                    style="@style/common_textview_white_big"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_dp_12"
                    android:paddingRight="@dimen/common_dp_12"
                    android:text="热门"
                    android:textColor="@color/common_theme_dark" />

                <ImageView
                    android:id="@+id/live_hot_icon"
                    style="@style/common_imageview"
                    android:layout_marginTop="@dimen/common_dp_2"
                    android:src="@drawable/home_icn_drop_down"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/live_new"
                style="@style/common_rect_wrap"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/live_new_text"
                    style="@style/common_textview_white_big"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_dp_12"
                    android:paddingRight="@dimen/common_dp_12"
                    android:text="最新" />

                <ImageView
                    android:id="@+id/live_new_icon"
                    style="@style/common_imageview"
                    android:layout_marginTop="@dimen/common_dp_2"
                    android:src="@drawable/home_icn_drop_down"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/live_cursor"
            style="@style/common_line"
            android:layout_height="@dimen/common_dp_2"
            android:background="@color/common_theme_dark"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>





