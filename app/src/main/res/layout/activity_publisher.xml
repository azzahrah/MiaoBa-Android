<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_rect_match">

    <SurfaceView
        android:id="@+id/publisher_surface"
        style="@style/common_rect_match" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bar_bg">

        <Button
            android:id="@+id/publisher_mic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_mic_on" />

        <Button
            android:id="@+id/publisher_sw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/publisher_mic"
            android:background="@drawable/ic_sw_camera" />

        <Button
            android:id="@+id/publisher_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_video_stop" />

        <Button
            android:id="@+id/publisher_cam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_cam_on" />

        <Button
            android:id="@+id/publisher_flash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/publisher_cam"
            android:background="@drawable/ic_flash_off" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/publisher_cap"
        style="@style/common_imageview"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_dp_16"
        android:src="@drawable/phone_edit_photo_icon" />

</RelativeLayout>