<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_rect_horizontal"
    android:background="@drawable/common_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/common_dp_12">

    <RelativeLayout style="@style/common_rect_wrap">

        <ImageView
            android:id="@+id/user_face"
            style="@style/common_imageview"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="@dimen/common_dp_48"
            android:src="@drawable/default_head" />

        <ImageView
            android:id="@+id/user_auth"
            style="@style/common_imageview"
            android:layout_alignBottom="@+id/user_face"
            android:layout_alignRight="@+id/user_face"
            android:src="@drawable/global_xing_1"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        style="@style/common_rect_horizontal"
        android:layout_marginLeft="@dimen/common_dp_12"
        android:layout_marginRight="@dimen/common_dp_12"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            style="@style/common_rect_horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_name"
                style="@style/common_textview_black"
                android:text="@string/app_name" />

            <ImageView
                android:id="@+id/user_sex"
                style="@style/common_imageview"
                android:layout_marginLeft="@dimen/common_dp_4"
                android:src="@drawable/global_male" />

            <ImageView
                android:id="@+id/user_rank"
                style="@style/common_imageview"
                android:layout_marginLeft="@dimen/common_dp_4"
                android:src="@drawable/rank_1" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_info"
            style="@style/common_textview_black_small"
            android:layout_marginTop="@dimen/common_dp_4"
            android:singleLine="false"
            android:text="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_follow"
        style="@style/common_imageview"
        android:src="@drawable/me_following"
        android:visibility="gone" />
</LinearLayout>


