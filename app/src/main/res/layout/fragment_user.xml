<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_rect_match"
    android:background="#F0F0F0">

    <LinearLayout
        style="@style/common_rect_match"
        android:orientation="vertical">

        <include layout="@layout/layout_main_actionbar" />

        <LinearLayout
            style="@style/common_rect_horizontal"
            android:background="@color/colorTheme"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/user_face"
                style="@style/common_imageview"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/user_leadid"
                style="@style/common_textview_white_small"
                android:layout_marginTop="@dimen/dp_8"
                android:text="喵吧直播" />

            <LinearLayout
                style="@style/common_rect_wrap"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/user_name"
                    style="@style/common_textview_white_small"
                    android:layout_marginRight="@dimen/dp_4"
                    android:text="Bining" />

                <ImageView
                    android:id="@+id/user_sex"
                    style="@style/common_imageview"
                    android:layout_marginRight="@dimen/dp_4"
                    android:src="@drawable/global_female" />

                <ImageView
                    android:id="@+id/user_rank"
                    style="@style/common_imageview"
                    android:layout_marginRight="@dimen/dp_4"
                    android:src="@drawable/rank_1" />

                <ImageView
                    android:id="@+id/user_info_edit"
                    style="@style/common_imageview"
                    android:src="@drawable/inke_btn_me_edit" />

            </LinearLayout>

            <LinearLayout
                style="@style/common_rect_wrap"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_follow"
                    style="@style/common_textview_white_small"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="关注 0" />

                <View
                    style="@style/common_line_veritical"
                    android:layout_height="@dimen/dp_12"
                    android:background="@color/colorLight" />

                <TextView
                    android:id="@+id/user_fans"
                    style="@style/common_textview_white_small"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="粉丝 0" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_autograph"
                style="@style/common_textview_white_small"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                android:singleLine="false"
                android:text="Ta好像忘记写签名了..." />

        </LinearLayout>

        <LinearLayout
            style="@style/common_rect_horizontal"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4">

            <RelativeLayout
                android:id="@+id/user_live"
                style="@style/common_rect_wrap"
                android:layout_weight="1"
                android:background="@drawable/common_background">

                <ImageView
                    android:id="@+id/user_live_icon"
                    style="@style/common_imageview"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_30"
                    android:src="@drawable/icon_my_live" />

                <TextView
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_live_icon"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="直播" />

                <TextView
                    android:id="@+id/user_live_text"
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_live_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="0个" />
            </RelativeLayout>

            <View
                style="@style/common_line_veritical"
                android:layout_width="@dimen/dp_4"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:id="@+id/user_level"
                style="@style/common_rect_wrap"
                android:layout_weight="1"
                android:background="@drawable/common_background">

                <ImageView
                    android:id="@+id/user_level_icon"
                    style="@style/common_imageview"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_30"
                    android:src="@drawable/icon_my_level" />

                <TextView
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_level_icon"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="等级" />

                <TextView
                    android:id="@+id/user_level_text"
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_level_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="1级" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/common_rect_horizontal"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4">

            <RelativeLayout
                android:id="@+id/user_gain"
                style="@style/common_rect_wrap"
                android:layout_weight="1"
                android:background="@drawable/common_background">

                <ImageView
                    android:id="@+id/user_gain_icon"
                    style="@style/common_imageview"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_30"
                    android:src="@drawable/icon_my_gain" />

                <TextView
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_gain_icon"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="收益" />

                <TextView
                    android:id="@+id/user_gain_text"
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_gain_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="0币" />
            </RelativeLayout>

            <View
                style="@style/common_line_veritical"
                android:layout_width="@dimen/dp_4"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:id="@+id/user_account"
                style="@style/common_rect_wrap"
                android:layout_weight="1"
                android:background="@drawable/common_background">

                <ImageView
                    android:id="@+id/user_account_icon"
                    style="@style/common_imageview"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_30"
                    android:src="@drawable/icon_my_account" />

                <TextView
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_account_icon"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:text="账户" />

                <TextView
                    android:id="@+id/user_account_text"
                    style="@style/common_textview_black_small"
                    android:layout_alignBottom="@+id/user_account_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_margin="@dimen/dp_8"
                    android:drawablePadding="@dimen/dp_4"
                    android:drawableRight="@drawable/icon_my_account_diamond"
                    android:text="0" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_ticket"
            style="@style/common_rect_horizontal"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/common_background">

            <TextView
                style="@style/user_property_key"
                android:paddingLeft="@dimen/dp_12"
                android:text="喵吧贡献榜" />

            <LinearLayout
                style="@style/user_property_image"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_ticket_champion"
                    style="@style/common_imageview"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/me_qiuzhan" />

                <ImageView
                    android:id="@+id/user_ticket_runnerup"
                    style="@style/common_imageview"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/me_qiuzhan" />

                <ImageView
                    android:id="@+id/user_ticket_third"
                    style="@style/common_imageview"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/me_qiuzhan" />

                <ImageView
                    style="@style/common_imageview"
                    android:src="@drawable/icon_arrow_theme" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout style="@style/common_rect_horizontal">

            <TextView
                android:id="@+id/user_auth"
                style="@style/user_property_value"
                android:drawableRight="@null"
                android:text="升级喵吧认证号" />

            <TextView
                style="@style/user_property_key"
                android:paddingLeft="@dimen/dp_12"
                android:text="喵吧认证" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_setting"
            style="@style/user_property_key"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/common_background"
            android:drawableRight="@drawable/icon_arrow_theme"
            android:paddingLeft="@dimen/dp_12"
            android:text="设置" />
    </LinearLayout>
</ScrollView>