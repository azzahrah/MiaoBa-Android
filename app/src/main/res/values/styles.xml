<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!--防止正式版时启动短暂白屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="common_dotted_line" parent="common_line">
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="common_textview_black_big" parent="common_textview">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="common_textview_black" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="common_textview_black_small" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="common_textview_black_tiny" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="common_textview_theme_big" parent="common_textview_black_big">
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="common_textview_theme" parent="common_textview_theme_big">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="common_textview_theme_small" parent="common_textview_theme_big">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="common_textview_theme_tiny" parent="common_textview_theme_big">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="common_textview_white_big" parent="common_textview_black_big">
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="common_textview_white" parent="common_textview_white_big">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="common_textview_white_small" parent="common_textview_white_big">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="common_textview_white_tiny" parent="common_textview_white_big">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="common_textview_gray_big" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="common_textview_gray" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="common_textview_gray_small" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="common_textview_gray_tiny" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="common_edittext_content" parent="common_edittext">
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="common_edittext_password" parent="common_edittext_content">
        <item name="android:digits">
            1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_
        </item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">18</item>
        <item name="android:password">true</item>
    </style>

    <style name="common_edittext_more" parent="common_edittext">
        <item name="android:maxLength">32</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:background">@drawable/common_edit_white_background</item>
    </style>

    <style name="common_edit_user" parent="common_edittext">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:background">@drawable/common_edit_white_background</item>
    </style>

    <style name="common_edit_phone" parent="common_edit_user">
        <item name="android:maxLength">11</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/common_edit_line_gray_background</item>
    </style>

    <style name="common_edit_captcha" parent="common_edit_user">
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/common_edit_line_gray_background</item>
    </style>

    <style name="common_edit_password" parent="common_edit_user">
        <item name="android:maxLength">18</item>
        <item name="android:layout_weight">1</item>
        <item name="android:digits">
            1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_
        </item>
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="common_imageview" parent="common_rect_wrap">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="common_button" parent="common_rect_horizontal">
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="common_button_theme_pie" parent="common_button">
        <item name="android:background">@drawable/common_round_rect_pie_theme</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_button_theme_line" parent="common_button">
        <item name="android:background">@drawable/common_round_rect_line_theme</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

