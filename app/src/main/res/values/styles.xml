    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimaryDark">@android:color/white</item>-->
    </style>

    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_dp_1</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <style name="common_vertical_line" parent="common_line">
        <item name="android:layout_width">@dimen/common_dp_1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="common_dotted_line" parent="common_line">
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="common_listview" parent="common_rect_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- 阻止list项变黑色 -->
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <!-- 设置list项点击颜色 -->
        <item name="android:listSelector">@android:color/transparent</item>
        <!-- 设置list项 上边和下边无黑色的阴影 -->
        <item name="android:fadingEdge">none</item>
        <!-- 设置滚动条的自动隐藏和显示 -->
        <item name="android:fadeScrollbars">false</item>
        <!-- 设置滚动条的隐藏 -->
        <item name="android:scrollbars">none</item>
        <!-- 设置滚动到底部模式 -->
        <!--<item name="android:overScrollMode">never</item>-->
        <!--List分割线-->
        <item name="android:divider">@color/line_divider</item>
        <!--List分割线高度-->
        <item name="android:dividerHeight">@dimen/common_dp_1</item>
    </style>

    <style name="common_textview" parent="common_rect_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_textview_black_big" parent="common_textview">
        <item name="android:textSize">@dimen/common_sp_18</item>
        <item name="android:textColor">@color/common_black_light</item>
    </style>

    <style name="common_textview_black" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="common_textview_black_small" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/common_sp_14</item>
    </style>

    <style name="common_textview_black_dark_big" parent="common_textview_black_big">
        <item name="android:textColor">@color/common_black_dark</item>
    </style>

    <style name="common_textview_black_drak" parent="common_textview_black_big">
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="common_textview_black_dark_small" parent="common_textview_black_dark_big">
        <item name="android:textSize">@dimen/common_sp_14</item>
    </style>

    <style name="common_textview_white_big" parent="common_textview_black_big">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_textview_white" parent="common_textview_white_big">
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="common_textview_white_small" parent="common_textview_white_big">
        <item name="android:textSize">@dimen/common_sp_14</item>
    </style>

    <style name="common_textview_gray_big" parent="common_textview_black_big">
        <item name="android:textColor">@color/common_gray_dark</item>
    </style>

    <style name="common_textview_gray" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="common_textview_gray_small" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/common_sp_14</item>
    </style>

    <style name="common_textview_gray_mini" parent="common_textview_gray_big">
        <item name="android:textSize">@dimen/common_sp_12</item>
    </style>

    <style name="common_edittext" parent="common_rect_horizontal">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/common_sp_14</item>
        <item name="android:textColor">@color/common_black_light</item>
        <item name="android:textColorHint">@color/common_gray_light</item>
    </style>

    <style name="common_edittext_more" parent="common_edittext">
        <item name="android:maxLength">32</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingBottom">@dimen/common_dp_8</item>
        <item name="android:paddingRight">@dimen/common_dp_4</item>
        <item name="android:paddingTop">@dimen/common_dp_8</item>
        <item name="android:paddingLeft">@dimen/common_dp_4</item>
        <item name="android:background">@drawable/common_edit_white_background</item>
    </style>

    <style name="common_edit_user" parent="common_edittext">
        <item name="android:textSize">@dimen/common_sp_18</item>
        <item name="android:paddingBottom">@dimen/common_dp_8</item>
        <item name="android:paddingRight">@dimen/common_dp_4</item>
        <item name="android:paddingTop">@dimen/common_dp_8</item>
        <item name="android:paddingLeft">@dimen/common_dp_4</item>
        <item name="android:background">@drawable/common_edit_white_background</item>
    </style>

    <style name="common_edit_phone" parent="common_edit_user">
        <item name="android:maxLength">11</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/common_edit_line_gray_background</item>
    </style>

    <style name="common_edit_captcha" parent="common_edit_user">
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/common_edit_line_gray_background</item>
    </style>

    <style name="common_edit_password" parent="common_edit_user">
        <item name="android:maxLength">18</item>
        <item name="android:layout_weight">1</item>
        <item name="android:digits">
            1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_
        </item>
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="common_imageview" parent="common_rect_wrap">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="common_button" parent="common_rect_horizontal">
        <item name="android:paddingLeft">@dimen/common_dp_12</item>
        <item name="android:paddingRight">@dimen/common_dp_12</item>
        <item name="android:paddingTop">@dimen/common_dp_8</item>
        <item name="android:paddingBottom">@dimen/common_dp_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_sp_16</item>
    </style>

    <style name="common_button_theme_pie" parent="common_button">
        <item name="android:background">@drawable/common_round_rect_pie_theme</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_button_theme_line" parent="common_button">
        <item name="android:background">@drawable/common_round_rect_line_theme</item>
        <item name="android:textColor">@color/common_theme_light</item>
    </style>

