    <style name="common_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <!--内容背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--窗口背景透明 -->
        <item name="android:windowFrame">@null</item>
        <!--边框 -->
        <item name="android:windowNoTitle">true</item>
        <!--无标题 -->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊 -->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--半透明背景灰度 -->
        <!--<item name="android:windowAnimationStyle">@style/dialog_anim</item>-->
        <!--动画-->
    </style>

    <style name="anim_dialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/view_in_alpha</item>
        <item name="android:windowExitAnimation">@anim/view_out_alpha</item>
    </style>

    <style name="anim_dialogactivity" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/view_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/view_out_to_bottom</item>
    </style>

    <style name="anim_popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/head_in</item>
        <item name="android:windowExitAnimation">@anim/head_out</item>
    </style>

    <style name="user_property_key" parent="common_rect_wrap">
        <item name="android:paddingBottom">@dimen/common_dp_16</item>
        <item name="android:paddingTop">@dimen/common_dp_16</item>
        <item name="android:paddingLeft">@dimen/common_dp_16</item>
        <item name="android:paddingRight">@dimen/common_dp_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/common_black_light</item>
        <item name="android:textSize">@dimen/common_sp_14</item>
        <item name="android:text">@string/app_no</item>
    </style>

    <style name="user_property_value" parent="user_property_key">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/common_background</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/common_dp_8</item>
        <item name="android:drawableRight">@drawable/icon_arrow_gray_light</item>
        <item name="android:textColor">@color/common_gray_dark</item>
        <item name="android:text">@string/not_set</item>
    </style>

    <style name="user_property_image" parent="common_imageview">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/common_dp_16</item>
    </style>

</resources>
