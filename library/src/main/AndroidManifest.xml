<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.nodemedia.library">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- android:exported 是否允许外部应用调用 -->
        <!-- android:enabled  Android系统能否实例化应用程序中的各组件 -->
        <service
            android:name=".MQTTService"
            android:exported="false"
            android:process=":remote">
            <intent-filter android:priority="1000">
                <!--  指定调用AIDL服务的ID  -->
                <action android:name="cn.nodemedia.library.MqttService" />
            </intent-filter>
        </service>

        <!-- 广播注册 -->
        <receiver
            android:name=".BaseBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
