<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qrcode_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/qrcode_scan_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/qrcode_scan_mask_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/qrcode_mask"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:id="@+id/qrcode_scan_crop_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/qrcode_scan_mask_top"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qrcode_capture"
        android:contentDescription="@string/app_name" >

        <ImageView
            android:id="@+id/qrcode_scan_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/qrcode_line"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/qrcode_scan_mask_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/qrcode_scan_crop_layout"
        android:background="@drawable/qrcode_mask"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/qrcode_scan_mask_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/qrcode_scan_mask_bottom"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/qrcode_scan_mask_top"
        android:layout_toLeftOf="@id/qrcode_scan_crop_layout"
        android:background="@drawable/qrcode_mask"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/qrcode_scan_mask_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/qrcode_scan_mask_bottom"
        android:layout_alignParentRight="true"
        android:layout_below="@id/qrcode_scan_mask_top"
        android:layout_toRightOf="@id/qrcode_scan_crop_layout"
        android:background="@drawable/qrcode_mask"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/qrcode_scan_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode_scan_crop_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/scan_tips"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>