<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BubbleImageView">
        <!-- 是否进行气泡剪切 -->
        <attr name="bivIsBubble" format="boolean" />
        <!-- 圆角矩形弧度 -->
        <attr name="bivRadius" format="dimension" />
        <!-- 三角指向方向 -->
        <attr name="bivOrientation">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <!-- 三角X轴投影 -->
        <attr name="bivVertexXDis" format="dimension" />
        <!-- 三角Y轴投影 -->
        <attr name="bivVertexYDis" format="dimension" />
        <!-- 三角底边长度 -->
        <attr name="bivHelineLength" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CountdownView">
        <!-- 圆角矩形弧度 -->
        <attr name="cvRadius" format="dimension" />
        <!-- 圆角矩形内边距 -->
        <attr name="cvPadding" format="dimension" />
        <!-- 文字大小 -->
        <attr name="cvTextSize" format="reference|dimension" />
        <!-- 文字颜色 -->
        <attr name="cvTextColor" format="reference|color" />
        <!-- 背景颜色 -->
        <attr name="cvBackground" format="reference|color" />
        <!-- 间隔距离 -->
        <attr name="cvSpaceWidth" format="dimension" />
        <!-- 间隔文字颜色 -->
        <attr name="cvSpaceTextColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SlideView">
        <!-- 引导小点是否显示 -->
        <attr name="svIsShowDots" format="boolean" />
        <!-- 引导小点位置 -->
        <attr name="svDotsPosition">
            <!-- 底部居中 -->
            <enum name="buttomCenter" value="0" />
            <!-- 底部居左 -->
            <enum name="buttomLeft" value="1" />
            <!-- 底部居右 -->
            <enum name="buttomRight" value="2" />
        </attr>
        <!-- 引导小点图片 -->
        <attr name="svDotsImageResource" format="reference|integer" />
        <!-- 两个引导小点的间距 -->
        <attr name="svDotsSpacing" format="dimension" />
        <!-- 引导小点的透明度 -->
        <attr name="svDotsAlpha" format="float" />
        <!-- 是否自动轮播 -->
        <attr name="svIsAutoShift" format="boolean" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="svIntervalTime" format="integer" />
        <!-- View宽高比,0表示均参照父类 -->
        <attr name="svAspectRatio" format="float" />
        <!-- 自动轮播的切换时间（控制速度） -->
        <attr name="transfromDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="TabPagerView">
        <!-- 选项卡背景 -->
        <attr name="tpvTabBackground" format="reference|color" />
        <!-- 选项卡文字未选中颜色 -->
        <attr name="tpvTabTextNormalColor" format="reference|color" />
        <!-- 选项卡文字选中颜色 -->
        <attr name="tpvTabTextSelectColor" format="reference|color" />
        <!-- 选项卡文字大小 -->
        <attr name="tpvTabTextSize" format="reference|dimension" />
        <!-- 选项卡文字上下内边距 -->
        <attr name="tpvTabTextPadding" format="dimension" />
        <!-- 选项卡子项宽度 -->
        <attr name="tpvTabChildWidth" format="dimension" />
        <!-- 选项卡游标宽度与选项卡子项宽度比例  -->
        <attr name="tpvAspectRatio" format="float" />
        <!-- 选项卡间是否有分割线  -->
        <attr name="hasDivider" format="boolean" />
        <!-- 是否有提示小圆点  -->
        <attr name="hasPoint" format="boolean" />
        <!-- 小圆点样式资源 -->
        <attr name="pointResourse" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="lineWidth" format="dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
        <attr name="animate" format="reference|boolean" />
    </declare-styleable>

</resources>